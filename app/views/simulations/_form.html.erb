<%= form_tag(run_simulations_path, :remote => true, :id => 'simulationForm', class: 'form-horizontal', role: 'form') do%>
  <div id='simulation'>
  <div class="form-group">
    <label for="commission" class='col-md-2 control-label'>Commission</label>
    <div class='col-md-5'>
      <div class="input-group">
        <%= text_field_tag :commission, '5', class: 'form-control'%>
        <span class="input-group-addon">%</span>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label for="market_type" class='col-md-2 control-label'>Market Type</label>
    <div class='col-md-5'>
      <%= select_tag "market_type", "<option></option><option>WIN</option><option>PLACE</option>".html_safe, class: 'form-control'%>
    </div>
  </div>
  <div class="form-group">
    <label for="venue" class='col-md-2 control-label'>Venue</label>
    <div class='col-md-5'>
      <%= select_tag "venue", options_for_select([''] + @venues.sort), class: 'form-control'%>
    </div>
  </div>
  <div class="form-group">
    <label for="start_date" class='col-md-2 control-label'>Start Date</label>
    <div class='col-md-5'>
      <div class="input-group date">
        <input type="text" name='start_date' class="form-control"><span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
      </div>
    </div>
  </div>
  <% s = Scenario.new%>
  <%= fields_for :scenarios, s,  child_index: s.object_id  do |scenario| %>
    <div id='scenario'>
    <div class="form-group">
      <label for="market_type"  class='col-md-2 control-label'>Side</label>
      <div class='col-md-5'>
        <%= select_tag "scenarios[side]", "<option>BACK</option><option>LAY</option><option>LAY (SP)</option>".html_safe, class: 'form-control'%>
      </div>
    </div>
    <div class="form-group">
      <label for="market_type" class='col-md-2 control-label'>Size</label>
      <div class='col-md-5'>
        <div class="input-group">
          <span class="input-group-addon">$</span>
          <%= scenario.text_field :size, class: 'form-control'%>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label for="market_type" class='col-md-2 control-label'>Position</label>
      <div class='col-md-3'>
        <%= scenario.text_field :position, class: 'form-control', placeholder: 'Comma Seperated'%>
      </div>

      <div class='col-md-1 nopadding'>
        OR
      </div>
      <div class='col-md-3 nopadding'>
        <%= select_tag "scenarios[range]", "<option></option><option>TOP 1/2</option><option>TOP 1/3</option><option>BOTTOM 1/2</option><option>BOTTOM 1/3</option>".html_safe, class: 'form-control'%>
      </div>
    </div>
  </div>
<% end %>

  <%= submit_tag 'Submit', class: 'save_button btn btn-primary' %>
</div>
<% end %>
