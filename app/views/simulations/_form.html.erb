<%= form_tag(run_simulations_path, :remote => true, :id => 'simulationForm', class: 'form-horizontal', role: 'form') do%>
  <div id='simulation'>
  <div class="form-group">
    <label for="commission" class='col-md-2 control-label'>Commission</label>
    <div class='col-md-2'>
      <div class="input-group">
        <%= text_field_tag :commission, '5', class: 'form-control'%>
        <span class="input-group-addon">%</span>
      </div>
    </div>
  </div>
  <div class='col-md-12'>
    <h3>Market filter</h3>
  </div>
  <div class="form-group">
    <label for="event_type" class='col-md-2 control-label'>Event Type</label>
    <div class='col-md-2'>
      <%= select_tag "event_type_id", options_from_collection_for_select(@event_types, 'id', 'name'), class: 'form-control', prompt: 'All'%>
    </div>
    <label for="market_type" class='col-md-2 control-label'>Market Type</label>
    <div class='col-md-2'>
      <%= select_tag "market_type", "<option>WIN</option><option>PLACE</option><option value=''>BOTH</option>".html_safe, class: 'form-control'%>
    </div>
    <label for="start_date" class='col-md-2 control-label'>Start Date</label>
    <div class='col-md-2'>
      <div class="input-group date">
        <input type="text" name='start_date' class="form-control"><span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label for="venue" class='col-md-2 control-label'>Venue</label>
    <div class='col-md-2'>
      <%= select_tag "venue_territory", options_for_select(@venues[:territory]), class: 'form-control', prompt: 'Territory'%>
    </div>
    <div class='col-md-2'>
      <%= select_tag "venue_class", options_for_select(@venues[:venue_class]), class: 'form-control', prompt: 'Class'%>
    </div>
    <div class='col-md-2'>
      <%= select_tag "venue_tier", options_for_select(@venues[:tier]), class: 'form-control', prompt: 'Tier'%>
    </div>
    <div class='col-md-2'>
      <%= select_tag "venue_name", options_for_select(@venues[:name]), class: 'form-control', prompt: 'Name'%>
    </div>
  </div>
  <div class='col-md-12'>
    <h3>Runner filter</h3>
  </div>
  <% s = Scenario.new%>
  <%= fields_for :scenarios, s,  child_index: s.object_id  do |scenario| %>
    <div id='scenario'>
    <div class="form-group">
      <label for="market_type"  class='col-md-2 control-label'>Side</label>
      <div class='col-md-2'>
        <%= select_tag "scenarios[side]", "<option>BACK</option><option>LAY</option><option>LAY (SP)</option>".html_safe, class: 'form-control'%>
      </div>
      <label for="market_type" class='col-md-2 control-label'>Size</label>
      <div class='col-md-2'>
        <div class="input-group">
          <span class="input-group-addon">$</span>
          <%= scenario.text_field :size, class: 'form-control'%>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label for="market_type" class='col-md-2 control-label'>Favourite Position</label>
      <div class='col-md-2'>
        <%= scenario.text_field :position, class: 'form-control', placeholder: 'Comma Seperated'%>
      </div>
      <label for="Or" class='col-md-2 control-label'>Or</label>
      <div class='col-md-2'>
        <%= select_tag "scenarios[range]", "<option></option><option>ALL</option><option>TOP 1/2</option><option>TOP 1/3</option><option>BOTTOM 1/2</option><option>BOTTOM 1/3</option>".html_safe, class: 'form-control'%>
      </div>
    </div>

     <div class="form-group">
      <label for="min_odds"  class='col-md-2 control-label'>Min Odds</label>
      <div class='col-md-2'>
          <%= scenario.text_field :min_odds, class: 'form-control'%>
      </div>
      <label for="max_odds" class='col-md-2 control-label'>Max Odds</label>
      <div class='col-md-2'>
        <div class="input-group">
          <%= scenario.text_field :max_odds, class: 'form-control'%>
        </div>
      </div>
    </div>
  </div>
<% end %>

  <%= submit_tag 'Submit', class: 'save_button btn btn-primary' %>
</div>
<% end %>
